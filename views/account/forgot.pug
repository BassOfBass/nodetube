extends ../layout

block content
  h1 Forgot Password
  section
    p Enter your email address below and we will send you password reset instructions.
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      div
        label(for='email') Email:
        input(type='email', name='email', id='email', autofocus, required)
      div
        button(type='submit')
          span.fas.fa-key
          |
          | Reset Password
