extends ../layout

block content
  h1 Still need an account? Visit 
    a(href="/signup") sign up page
    | .
  section
    h2 Login To #{brandName}
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      div
        label(for='email') Email or Username:
        input(name='email', id='email', autofocus, required)
      div
        label(for='password') Password:
        input(type='password', name='password', id='password', required)
      div
        button(type='submit')
          i.fas.fa-user
          |
          | Login

      //- turn off forgot password, should expose it as an env var
      //- show the forgot your password button
      if forgotEmailFunctionalityOn
        div
          a.btn.btn-link(href='/forgot') Forgot your password?
