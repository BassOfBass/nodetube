extends ../layout

block content
  h1 Contact Form
  section
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      div
        label(for='name') Name
        input(type='text', name='name', id='name', autofocus=true)
      div
        label(for='email') Email
        input(type='text', name='email', id='email')
      div
        label(classor='message') Body
        textarea(name='message', id='message', rows='7')
      div
        button(type='submit')
          span.fas.fa-envelope
          |
          | Send

      link(href='//vjs.zencdn.net/5.19/video-js.min.css', rel='stylesheet')
      script(src='//vjs.zencdn.net/5.19/video.min.js')


      video#my-player.video-js(controls='', preload='auto', poster='//vjs.zencdn.net/v/oceans.png', data-setup='{}')
        source(src='//vjs.zencdn.net/v/oceans.mp4', type='video/mp4')
        source(src='//vjs.zencdn.net/v/oceans.webm', type='video/webm')
        source(src='//vjs.zencdn.net/v/oceans.ogv', type='video/ogg')
        p.vjs-no-js.
          To view this video please enable JavaScript, and consider upgrading to a web browser that #[a(href='http://videojs.com/html5-video-support/', target='_blank') supports HTML5 video]
